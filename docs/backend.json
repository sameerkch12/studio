
{
  "entities": {
    "DeliveryBoy": {
      "title": "DeliveryBoy",
      "type": "object",
      "description": "Represents a delivery boy in the system.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the delivery boy."
        }
      },
      "required": ["name"]
    },
    "DeliveryRecord": {
      "title": "DeliveryRecord",
      "type": "object",
      "description": "Represents a daily delivery record for a delivery boy.",
      "properties": {
        "deliveryBoyName": {
          "type": "string",
          "description": "Name of the delivery boy."
        },
        "date": {
          "type": "string",
          "description": "Date of the delivery record.",
          "format": "date-time"
        },
        "delivered": {
          "type": "number",
          "description": "Number of parcels delivered."
        },
        "returned": {
          "type": "number",
          "description": "Number of parcels returned."
        },
        "expectedCod": {
          "type": "number",
          "description": "Expected COD amount."
        },
        "actualCodCollected": {
          "type": "number",
          "description": "Actual COD amount collected."
        },
        "codShortageReason": {
          "type": "string",
          "description": "Reason for any COD shortage."
        },
        "rvp": {
          "type": "number",
          "description": "Number of RVP (Return to Vendor Pickup) pickups."
        },
        "advance": {
          "type": "number",
          "description": "On-spot advance paid."
        }
      },
      "required": [
        "deliveryBoyName",
        "date",
        "delivered",
        "returned",
        "expectedCod",
        "actualCodCollected",
        "rvp",
        "advance"
      ]
    },
    "AdvancePayment": {
      "title": "AdvancePayment",
      "type": "object",
      "description": "Represents a separate advance payment to a delivery boy.",
      "properties": {
        "deliveryBoyName": {
          "type": "string",
          "description": "Name of the delivery boy receiving the advance."
        },
        "date": {
          "type": "string",
          "description": "Date of the advance payment.",
          "format": "date-time"
        },
        "amount": {
          "type": "number",
          "description": "Amount of advance paid."
        }
      },
      "required": ["deliveryBoyName", "date", "amount"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/delivery_records/{recordId}": {
      "schema": { "$ref": "#/entities/DeliveryRecord" },
      "description": "Stores all delivery records from all delivery boys."
    },
    "/advance_payments/{paymentId}": {
      "schema": { "$ref": "#/entities/AdvancePayment" },
      "description": "Stores all separate advance payments made."
    }
  }
}
